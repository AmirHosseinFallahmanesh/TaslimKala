@model  Cart
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>سبد خرید</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->
<!--================Cart Area =================-->
<section class="cart_area section_padding" dir="rtl">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">محصول</th>
                            <th scope="col">قیمت</th>
                            <th scope="col">تعداد</th>
                            <th scope="col">جمع کل</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src="~/@item.Product.Medias[0].Path" alt="" />
                                        </div>
                                        <div class="media-body">
                                            <p>@item.Product.Name</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@item.Product.Price تومان</h5>
                                </td>
                                <td>
                                    <div class="product_count" dir="ltr">


                                        <input class="input-number" type="text" value="@item.Quantity" min="0" max="10">

                                    </div>
                                </td>
                                <td>
                                    <h5>@(item.Product.Price * item.Quantity) تومان</h5>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td>
                                <h5>مجموع</h5>
                            </td>
                            <td>
                                <h5>@Model.GetTotalPrice() تومان</h5>
                            </td>
                            <td>
                                <a class="btn_1" href="#">  به روز رسانی سبد</a>
                            </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                <div class="checkout_btn_inner float-right">
                    <a class="btn_1 checkout_btn_1" asp-controller="Checkout" asp-action="index" >ادامه خرید</a>
                    <a class="btn_1 checkout_btn_1" href="~/home/index">بازگشت</a>
                </div>
            </div>
        </div>
</section>